            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_x="131dp"
            android:layout_y="15dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_x="131dp"
            android:layout_y="38dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/oficial"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_x="131dp"
            android:layout_y="61dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/particular"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_x="131dp"
            android:layout_y="84dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/publico"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_x="130dp"
            android:layout_y="109dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/total"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_x="131dp"
            android:layout_y="132dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_x="59dp"
            android:layout_y="16dp"
            android:text="Clase:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/ofici"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_x="58dp"
            android:layout_y="64dp"
            android:text="Oficial:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/parti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="86dp"
            android:text="Particular:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/extran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="57dp"
            android:layout_y="40dp"
            android:text="Extranjero:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/pub"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="109dp"
            android:text="Publico:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tota"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="134dp"
            android:text="Total:"
